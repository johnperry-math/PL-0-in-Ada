package Compiler is

type PCode_Entry is private;
type thread_range is private;

max_table_size: constant := 1000;

type Table_Range is range 0..max_table_size;
type PCode_Table is array(table_range) of PCODE_Entry;

procedure Show_PCode(code: in PCode_Table; start, stop: table_range);

procedure Interpret(codes: in PCode_Table; which_stack: thread_range);

procedure Compile(code: out PCode_Table);

private

type PCode is (
  OPR, CAL, INT, JPC, JMP, LIT, LOD, STO, -- original
  CTS, SNT, RFT, WFT, THN, STX, LDX       -- added by John Perry
);

type Comment_String is new String(1..10);

type PCode_Entry is record
  instruction: PCode;
  level:       Integer;
  data:        Integer;
  comment:     Comment_String;
end record;

max_threads: constant := 16;
type Thread_Range is range 1..max_threads;

end Compiler;